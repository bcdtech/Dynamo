<UserControl
    x:Class="SampleNodes.Controls.SliderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="210"
    Height="65"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid Name="CustomUIGrid">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Margin="7,0,0,0"
                    FontFamily="Arial"
                    Foreground="#FF5E5C5A"
                    Text="0" />
                <TextBlock
                    Margin="169,0,0,0"
                    FontFamily="Arial"
                    Foreground="#FF5E5C5A"
                    Text="10" />
            </StackPanel>
            <Slider
                Width="190"
                Height="32"
                Margin="5,0,0,0"
                HorizontalAlignment="Left"
                BorderBrush="#00000000"
                BorderThickness="0"
                IsSnapToTickEnabled="True"
                Maximum="10"
                Minimum="0"
                TickFrequency="2"
                TickPlacement="Both"
                ValueChanged="Slider_ValueChanged"
                Value="{Binding SliderValue, Mode=TwoWay}">
                <Slider.Background>
                    <ImageBrush />
                </Slider.Background>
                <Slider.ToolTip>
                    <TextBlock Text="Slide this to crank up the awesome." />
                </Slider.ToolTip>
            </Slider>
            <StackPanel Margin="0,2,0,0" Orientation="Horizontal">
                <TextBlock
                    Margin="7,0,0,0"
                    FontFamily="Arial"
                    Foreground="#FF5E5C5A"
                    Text="0" />
                <TextBlock
                    Margin="165,0,0,0"
                    HorizontalAlignment="Right"
                    FontFamily="Arial"
                    Foreground="#FF5E5C5A"
                    Text="100" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
