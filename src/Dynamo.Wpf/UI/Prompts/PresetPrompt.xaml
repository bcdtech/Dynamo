<Window
    x:Class="Dynamo.Nodes.PresetPrompt"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:p="clr-namespace:Dynamo.Wpf.Properties"
    xmlns:ui="clr-namespace:Dynamo.UI"
    Title="{x:Static p:Resources.PresetsWindowTitle}"
    Width="400"
    Height="410"
    Style="{DynamicResource DynamoWindowStyle}"
    WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/DynamoCoreWpf;component/UI/Themes/Modern/DynamoModern.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="#333">

        <StackPanel Margin="15">

            <TextBlock
                Name="Indicator"
                Padding="0,15,0,15"
                FontSize="15"
                Foreground="WhiteSmoke"
                Text="{x:Static p:Resources.PresetsWindowTitle}" />
            <Label
                Name="TitleLabel"
                Height="28"
                Margin="0,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="{x:Static p:Resources.PresetsWindowName}"
                Foreground="DarkGray">
                <Label.ToolTip>
                    <ToolTip Content="{x:Static p:Resources.PresetPromptNameTooltip}" Style="{StaticResource GenericToolTipLight}" />
                </Label.ToolTip>
            </Label>
            <TextBox
                Name="nameBox"
                Padding="5"
                MaxLength="50"
                Style="{DynamicResource ResourceKey=SDarkTextBox}"
                TextChanged="NameBox_OnTextChanged" />
            <Label
                Name="TextRemaining"
                Height="28"
                Margin="5,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="10"
                Foreground="DarkGray" />
            <TextBlock
                Name="nameView"
                Padding="5"
                FontSize="13"
                Foreground="WhiteSmoke" />

            <Label
                Name="DescriptionLabel"
                Height="28"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="{x:Static p:Resources.PresetsWindowDescription}"
                Foreground="DarkGray">
                <Label.ToolTip>
                    <ToolTip Content="{x:Static p:Resources.PresetPromptDescriptionTooltip}" Style="{StaticResource GenericToolTipLight}" />
                </Label.ToolTip>
            </Label>
            <TextBox
                Name="DescriptionInput"
                MaxHeight="64"
                Padding="5"
                AcceptsReturn="True"
                HorizontalScrollBarVisibility="Disabled"
                MinLines="3"
                Style="{DynamicResource SDarkTextBox}"
                Tag="{x:Static p:Resources.PresetsWindowDescriptionHint}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />

            <StackPanel
                Margin="0,25,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <Button
                    Name="okButton"
                    Width="75"
                    Margin="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="OK_Click"
                    Content="{x:Static p:Resources.OKButton}"
                    IsDefault="True"
                    Style="{DynamicResource ResourceKey=STextButton}"
                    TabIndex="2" />
                <Button
                    Name="cancelButton"
                    Width="75"
                    Margin="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="Cancel_Click"
                    Content="{x:Static p:Resources.CancelButton}"
                    IsCancel="True"
                    Style="{DynamicResource ResourceKey=STextButton}"
                    TabIndex="3" />

            </StackPanel>

        </StackPanel>
    </Grid>
</Window>