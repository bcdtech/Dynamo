<UserControl
    x:Class="Dynamo.UI.Controls.StartPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:configuration="clr-namespace:Dynamo.Configuration;assembly=DynamoCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="clr-namespace:Dynamo.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:Dynamo.Wpf.Properties"
    xmlns:ui="clr-namespace:Dynamo.UI"
    Margin="0,-1,0,0"
    d:DesignHeight="480"
    d:DesignWidth="640"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dynamo.Wpf;component/Themes/Modern/DynamoModern.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid
        Name="startPageGrid"
        AllowDrop="True"
        Background="White"
        Drop="StartPage_OnDrop">

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Begin top part (i.e. the "Start" tab)  -->
        <Border
            Margin="220,-40,0,50"
            HorizontalAlignment="Stretch"
            Background="#3C3C3C" />

        <!--  Begin Dynamo logo  -->
        <Image
            Name="StartPageLogo"
            Grid.Row="1"
            Width="250"
            Margin="0,32,0,32"
            HorizontalAlignment="Center" />

        <!--  Begin inner grid control for all other list boxes  -->
        <ScrollViewer
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            HorizontalScrollBarVisibility="Hidden">

            <Grid Name="innerGrid" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="285" />
                    <ColumnDefinition Width="110" />
                    <ColumnDefinition Width="285" />
                </Grid.ColumnDefinitions>

                <!--  Left rows of list boxes  -->
                <StackPanel
                    Name="leftPanel"
                    Grid.Column="0"
                    Orientation="Vertical">

                    <Border BorderBrush="#dfd8cf" BorderThickness="0,0,0,1">
                        <TextBlock
                            Margin="0,0,12,0"
                            HorizontalAlignment="Right"
                            FontFamily="{StaticResource ArtifaktElementBold}"
                            FontSize="18"
                            Foreground="#3395a2"
                            Text="{x:Static p:Resources.StartPageFiles}" />
                    </Border>

                    <ListBox
                        Name="filesListBox"
                        ItemContainerStyle="{StaticResource StartPageListBoxItem}"
                        SelectionChanged="OnItemSelectionChanged"
                        Style="{StaticResource StartPageListBox}" />

                    <Border BorderBrush="#dfd8cf" BorderThickness="0,0,0,1">
                        <TextBlock
                            Margin="0,0,12,0"
                            HorizontalAlignment="Right"
                            FontFamily="{StaticResource ArtifaktElementBold}"
                            FontSize="18"
                            Foreground="#62895b"
                            Text="{x:Static p:Resources.StartPageRecent}" />
                    </Border>

                    <ListBox
                        Name="recentListBox"
                        ItemContainerStyle="{StaticResource StartPageListBoxItem}"
                        SelectionChanged="OnItemSelectionChanged"
                        Style="{StaticResource StartPageListBox}" />

                    <Border BorderBrush="#dfd8cf" BorderThickness="0,0,0,1">
                        <TextBlock
                            Margin="0,0,12,0"
                            HorizontalAlignment="Right"
                            FontFamily="{StaticResource ArtifaktElementBold}"
                            FontSize="18"
                            Foreground="#ad5446"
                            Text="{Binding Path=BackupTitle}" />
                    </Border>

                    <ListBox
                        Name="backupFilesList"
                        Margin="0,0,12,0"
                        ItemContainerStyle="{StaticResource StartPageListBoxItem}"
                        SelectionChanged="OnItemSelectionChanged"
                        Style="{StaticResource StartPageListBox}" />

                    <Grid
                        Name="backupButtons"
                        HorizontalAlignment="Stretch"
                        Background="White">

                        <Label
                            Name="backupLocation"
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Right"
                            Content="{x:Static p:Resources.StartPageBackupLocation}"
                            FontFamily="{StaticResource ArtifaktElementRegular}"
                            MouseLeftButtonUp="ShowBackupFilesInFolder"
                            Style="{StaticResource StartPageLabel}" />
                    </Grid>
                </StackPanel>

                <!--  Right rows of list boxes  -->
                <StackPanel
                    Name="rightPanel"
                    Grid.Column="2"
                    Orientation="Vertical">

                    <Border BorderBrush="#dfd8cf" BorderThickness="0,0,0,1">
                        <TextBlock
                            Margin="0,0,12,0"
                            HorizontalAlignment="Right"
                            FontFamily="{StaticResource ArtifaktElementBold}"
                            FontSize="18"
                            Foreground="#a55553"
                            Text="{x:Static p:Resources.StartPageAsk}" />
                    </Border>

                    <ListBox
                        Name="askListBox"
                        ItemContainerStyle="{StaticResource StartPageListBoxItem}"
                        SelectionChanged="OnItemSelectionChanged"
                        Style="{StaticResource StartPageListBox}" />

                    <Border BorderBrush="#dfd8cf" BorderThickness="0,0,0,1">
                        <TextBlock
                            Margin="0,0,12,0"
                            HorizontalAlignment="Right"
                            FontFamily="{StaticResource ArtifaktElementBold}"
                            FontSize="18"
                            Foreground="#6f4c76"
                            Text="{x:Static p:Resources.StartPageReference}" />
                    </Border>

                    <ListBox
                        Name="referenceListBox"
                        ItemContainerStyle="{StaticResource StartPageListBoxItem}"
                        SelectionChanged="OnItemSelectionChanged"
                        Style="{StaticResource StartPageListBox}" />

                    <Border BorderBrush="#dfd8cf" BorderThickness="0,0,0,1">
                        <TextBlock
                            Margin="0,0,12,0"
                            HorizontalAlignment="Right"
                            FontFamily="{StaticResource ArtifaktElementBold}"
                            FontSize="18"
                            Foreground="#4b9dbf"
                            Text="{x:Static p:Resources.StartPageCode}" />
                    </Border>

                    <ListBox
                        Name="codeListBox"
                        ItemContainerStyle="{StaticResource StartPageListBoxItem}"
                        SelectionChanged="OnItemSelectionChanged"
                        Style="{StaticResource StartPageListBox}" />

                    <Border BorderBrush="#dfd8cf" BorderThickness="0,0,0,1">
                        <TextBlock
                            Margin="0,0,12,0"
                            HorizontalAlignment="Right"
                            FontFamily="{StaticResource ArtifaktElementBold}"
                            FontSize="18"
                            Foreground="#5e8f80"
                            Text="{x:Static p:Resources.StartPageSamples}" />
                    </Border>

                    <TreeView
                        x:Name="sampleFileTreeView"
                        Grid.Row="3"
                        Grid.ColumnSpan="2"
                        Background="#FFFFFF"
                        BorderThickness="0"
                        FontSize="16"
                        ItemContainerStyle="{StaticResource StartPageTreeViewItem}"
                        Style="{StaticResource StartPageTreeView}">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate DataType="{x:Type l:SampleFileEntry}" ItemsSource="{Binding Path=Children}">
                                <TextBlock
                                    Cursor="Hand"
                                    MouseLeftButtonUp="OnSampleFileSelected"
                                    Text="{Binding Path=FileName}" />
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>

                    <Label
                        Margin="0,0,12,0"
                        HorizontalAlignment="Left"
                        Content="{x:Static p:Resources.StartPageShowSamples}"
                        FontFamily="{StaticResource ArtifaktElementBold}"
                        MouseLeftButtonUp="ShowSamplesInFolder"
                        Style="{StaticResource StartPageLabel}" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
