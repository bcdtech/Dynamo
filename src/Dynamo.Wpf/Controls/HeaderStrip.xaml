<UserControl
    x:Class="Dynamo.UI.Controls.HeaderStrip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Dynamo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:Dynamo.UI"
    Name="HeaderStripControl"
    Margin="-20,0,0,0"
    Padding="10,15,0,0"
    d:DesignHeight="300"
    d:DesignWidth="300"
    FlowDirection="RightToLeft"
    mc:Ignorable="d">

    <UserControl.LayoutTransform>
        <RotateTransform Angle="-90" />
    </UserControl.LayoutTransform>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dynamo.Wpf;component/Themes/Modern/DynamoModern.xaml" />

            </ResourceDictionary.MergedDictionaries>
            <controls:SelectedItemToActiveConverter
                x:Key="SelectedItemToActiveConverter"
                ActiveColor="#393939"
                NormalColor="Transparent" />
            <Style x:Key="HeaderTextBlockStyle" TargetType="{x:Type TextBlock}">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Foreground" Value="#868686" />
                <Setter Property="FontSize" Value="12" />
                <!--<Setter Property="FontStyle"
                    Value="Italic"/>-->
            </Style>
            <Style x:Key="HeaderListButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Border
                                x:Name="container"
                                Padding="8,3,8,3"
                                Background="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Background}"
                                BorderBrush="#444444"
                                BorderThickness="1"
                                CornerRadius="2">
                                <TextBlock
                                    x:Name="text"
                                    Style="{StaticResource HeaderTextBlockStyle}"
                                    Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Content}" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Button.IsMouseOver" Value="True">
                                    <Setter TargetName="container" Property="Background" Value="#393939" />
                                    <Setter TargetName="text" Property="Foreground" Value="#AAAAAA" />
                                </Trigger>
                                <Trigger Property="Button.IsPressed" Value="True">
                                    <Setter TargetName="container" Property="Background" Value="#222222" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <DataTemplate x:Key="SingleItemListTemplate">
                <Border
                    x:Name="container"
                    Padding="0,3,8,3"
                    Background="Transparent">
                    <TextBlock
                        x:Name="text"
                        Style="{StaticResource HeaderTextBlockStyle}"
                        Text="{Binding SelectedItem.Text, ElementName=HeaderStripControl}" />
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="HeadersListTemplate">
                <ListBox
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <!--<Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Button Margin="0,0,16,0"
                                            Style="{StaticResource HeaderListButtonStyle}"
                                            Content="{Binding Text}"
                                            Click="OnHeaderButtonClick">
                                        <Button.Background>
                                            <MultiBinding Converter="{StaticResource SelectedItemToActiveConverter}">
                                                <Binding />
                                                <Binding Path="SelectedItem"
                                                         ElementName="HeaderStripControl" />
                                            </MultiBinding>
                                        </Button.Background>
                                    </Button>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>-->
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>

            </DataTemplate>

            <controls:HeaderTemplateSelector
                x:Key="HeaderTemplateSelector"
                HeadersListTemplate="{StaticResource HeadersListTemplate}"
                SingleHeaderTemplate="{StaticResource SingleItemListTemplate}" />
        </ResourceDictionary>
    </UserControl.Resources>
    <ContentControl Content="{Binding HeadersList}" ContentTemplateSelector="{StaticResource HeaderTemplateSelector}" />
</UserControl>
