<Window
    x:Class="Dynamo.Wpf.Views.Debug.DebugModesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:p="clr-namespace:Dynamo.Wpf.Properties"
    Title="{x:Static p:Resources.DynamoViewDebugMenuDebugModes}"
    Width="350"
    Height="510"
    ResizeMode="NoResize">
    <StackPanel>
        <ListView
            Name="CheckList"
            Height="320"
            Margin="10,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <CheckBox IsChecked="{Binding Enabled}" />
                        <TextBlock Margin="10,0,0,0" Text="{Binding Name}" />
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="OnDebugModeItemClick" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <ScrollViewer Height="100" Margin="10,5,10,0">
            <TextBox
                x:Name="SelectedDbgMode"
                IsReadOnly="True"
                Text="{Binding SelectedDebugMode}"
                TextWrapping="Wrap" />
        </ScrollViewer>
        <StackPanel
            Width="188"
            Height="46"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                x:Name="btnOK"
                Width="75"
                Height="25"
                Margin="10,10,10,10"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="OnOkClick"
                Content="OK"
                IsDefault="True"
                TabIndex="1600" />
            <Button
                x:Name="btnCancel"
                Width="75"
                Height="25"
                Margin="10,10,10,10"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="OnCancelClick"
                Content="Cancel"
                IsCancel="True"
                TabIndex="1700" />
        </StackPanel>
    </StackPanel>
</Window>
