<Popup
    x:Class="Dynamo.Wpf.Views.FileTrust.FileTrustWarning"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Dynamo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="clr-namespace:FontAwesome5;assembly=FontAwesome5.Net"
    xmlns:local="clr-namespace:Dynamo.Wpf.Views.FileTrust"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:Dynamo.Wpf.Properties"
    xmlns:ui="clr-namespace:Dynamo.UI"
    Width="530"
    Height="250"
    d:DesignHeight="250"
    d:DesignWidth="415"
    AllowsTransparency="True"
    IsOpen="{Binding ShowWarningPopup}"
    Opacity="0.5"
    mc:Ignorable="d">
    <Popup.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dynamo.Wpf;component/Themes/Modern/DynamoModern.xaml" />

            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <controls:PointsToPathConverter x:Key="PointsToPathConverter" />
        </ResourceDictionary>
    </Popup.Resources>
    <Canvas Name="RootLayout" Background="Transparent">
        <Path x:Name="PopupPathRectangle" Style="{StaticResource PoupPathRectangleStyle}">
            <Path.Data>
                <RectangleGeometry x:Name="BackgroundRectangle" />
            </Path.Data>
            <!--  This effect will show a 4px shadow of 20% of tranparency with a angle of 135 grades  -->
            <Path.Effect>
                <DropShadowEffect
                    BlurRadius="4"
                    Direction="135"
                    Opacity="0.2"
                    ShadowDepth="4"
                    Color="Black" />
            </Path.Effect>
        </Path>

        <Path x:Name="PopupPathRectangleShadow" Style="{StaticResource PoupPathRectangleStyle}">
            <Path.Data>
                <RectangleGeometry Rect="{Binding ElementName=BackgroundRectangle, Path=Rect}" />
            </Path.Data>
            <!--  This effect will show a 4px shadow of 20% of tranparency with a angle of 315 grades  -->
            <Path.Effect>
                <DropShadowEffect
                    BlurRadius="4"
                    Direction="315"
                    Opacity="0.2"
                    ShadowDepth="4"
                    Color="Black" />
            </Path.Effect>
        </Path>

        <!--  This Path will draw on the Canvas the pointer (a triangle)  -->
        <Path
            x:Name="TooltipPointer"
            Data="{Binding Path=TooltipPointerPoints, Converter={StaticResource PointsToPathConverter}}"
            Style="{StaticResource PoupPathPointerStyle}">
            <Path.Effect>
                <DropShadowEffect
                    BlurRadius="4"
                    Direction="{Binding Path=ShadowTooltipDirection}"
                    Opacity="0.2"
                    ShadowDepth="4"
                    Color="Black" />
            </Path.Effect>
        </Path>

        <Grid
            x:Name="mainPopupGrid"
            Width="{Binding PopupRectangleWidth}"
            Margin="15,15,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition MinHeight="36" />
            </Grid.RowDefinitions>

            <!--  Popup Title Grid  -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <!--  This is the header/title section of the Popup  -->
                <Border Grid.Row="0" BorderThickness="0,0,0,1">
                    <Border.BorderBrush>
                        <SolidColorBrush Opacity="0.3" Color="Black" />
                    </Border.BorderBrush>
                    <Grid Margin="20,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Name="ExclamationTriangleLabel"
                            Margin="0,-4,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                            <Label.Content>
                                <fa:ImageAwesome
                                    Width="15"
                                    Height="15"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom"
                                    Foreground="#FAA21B"
                                    Icon="Solid_ExclamationTriangle" />
                            </Label.Content>
                        </Label>
                        <Label
                            x:Name="TitleLabel"
                            Grid.Column="1"
                            Content="{x:Static p:Resources.FileTrustWarningPopupTitle}"
                            FontFamily="宋体"
                            FontSize="16"
                            Foreground="Black"
                            Style="{StaticResource PoupTitleLabelStyle}" />
                        <Label
                            Name="TitleInfo"
                            Grid.Column="2"
                            Width="53"
                            Height="26"
                            Margin="20,-3,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                            <Label.ToolTip>
                                <ToolTip Content="{x:Static p:Resources.FileTrustWarningPopupTooltip1}" Style="{StaticResource GenericToolTipLight}" />
                            </Label.ToolTip>
                            <Label.Content>
                                <fa:ImageAwesome
                                    Width="15"
                                    Height="15"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom"
                                    Foreground="#808080"
                                    Icon="Solid_QuestionCircle" />
                            </Label.Content>
                        </Label>
                    </Grid>
                </Border>
            </Grid>

            <!--  Popup Contents Grid  -->
            <Grid Grid.Row="1" Margin="0,10,0,10">
                <Grid x:Name="PopupContents">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        MaxWidth="500"
                        Margin="22,0,0,0"
                        FontFamily="宋体"
                        FontSize="13"
                        Text="{x:Static p:Resources.FileTrustWarningPopupText}"
                        TextWrapping="Wrap" />
                    <StackPanel
                        Grid.Row="1"
                        MaxWidth="500"
                        Margin="22,20,0,10"
                        Orientation="Horizontal">
                        <CheckBox
                            Name="FileTrustWarningCheckBox"
                            Content="{x:Static p:Resources.FileTrustWarningCheckBoxText}"
                            FontFamily="宋体"
                            FontSize="13"
                            Style="{StaticResource CheckBoxFileTrustStyle}" />
                        <Label
                            Name="TitleInfo2"
                            Width="53"
                            Height="26"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                            <Label.ToolTip>
                                <ToolTip Content="{x:Static p:Resources.FileTrustWarningPopupTooltip2}" Style="{StaticResource GenericToolTipLight}" />
                            </Label.ToolTip>
                            <Label.Content>
                                <fa:ImageAwesome
                                    Width="15"
                                    Height="15"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom"
                                    Foreground="#808080"
                                    Icon="Solid_QuestionCircle" />
                            </Label.Content>
                        </Label>
                    </StackPanel>
                </Grid>
            </Grid>

            <!--  Popup Buttons Grid  -->
            <Grid Grid.Row="2" Margin="20,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button
                    Name="SettingsButton"
                    Grid.Column="0"
                    MinWidth="80"
                    HorizontalAlignment="Left"
                    Click="SettingsButton_Click"
                    Content="{x:Static p:Resources.FileTrustWarningPopupSettings}"
                    Style="{StaticResource OutlinedButtonStyleInverted}" />
                <StackPanel
                    Grid.Column="1"
                    Margin="120,0,0,0"
                    Orientation="Horizontal">
                    <Button
                        Name="CloseFileButton"
                        MinWidth="100"
                        Click="CloseFileButton_Click"
                        Content="{x:Static p:Resources.FileTrustWarningPopupNoCloseFile}"
                        Style="{StaticResource OutlinedButtonStyleInverted}" />
                    <Button
                        Name="YesButton"
                        MinWidth="55"
                        Click="YesButton_Click"
                        Content="{x:Static p:Resources.FileTrustWarningPopupYes}"
                        Style="{StaticResource SolidButtonStyle}" />
                </StackPanel>
            </Grid>

        </Grid>
    </Canvas>
</Popup>
