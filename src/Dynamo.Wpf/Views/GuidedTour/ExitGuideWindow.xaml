<Popup
    x:Class="Dynamo.Wpf.Views.GuidedTour.ExitGuideWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Dynamo.Wpf.Views.GuidedTour"
    xmlns:localui="clr-namespace:Dynamo.Wpf.UI.GuidedTour"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:Dynamo.Wpf.Properties"
    xmlns:ui="clr-namespace:Dynamo.UI"
    Width="400"
    Height="128"
    AllowsTransparency="True"
    mc:Ignorable="d">
    <Popup.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dynamo.Wpf;component/Themes/Modern/Generic.xaml" />

            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </Popup.Resources>

    <Border
        Name="brdEtikett"
        ClipToBounds="True"
        CornerRadius="3">
        <Canvas Background="Transparent">

            <Grid
                Name="RootLayout"
                Width="{Binding Width}"
                Height="{Binding Height}"
                Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <!--  This is the header/title section of the Popup  -->
                <Border Grid.Row="0" BorderThickness="0,0,0,1">
                    <Border.BorderBrush>
                        <SolidColorBrush
                            x:Name="TitleLine"
                            Opacity="0.3"
                            Color="{StaticResource PopupTitleBorderColor}" />
                    </Border.BorderBrush>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            x:Name="TitleLabel"
                            Grid.Column="0"
                            Margin="20,14,0,5"
                            Content="{Binding Title}"
                            FontSize="18"
                            Style="{StaticResource PoupTitleLabelStyle}" />
                    </Grid>
                </Border>

                <Grid Grid.Row="1">
                    <!--  This is the text section of the Popup  -->
                    <localui:CustomRichTextBox
                        x:Name="ContentRichTextBox"
                        Padding="20,20,100,0"
                        CustomText="{Binding FormattedText}"
                        IsDocumentEnabled="True"
                        Style="{StaticResource CustomRichTextBoxStyle}" />
                </Grid>

                <!--  Group of buttons Exit/Continue  -->
                <Grid Grid.Row="2" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Name="ExitTourButton"
                        Grid.Column="2"
                        Margin="0,0,10,0"
                        Content="{x:Static p:Resources.PackagesGuideExitButton}"
                        FontWeight="Medium"
                        Style="{StaticResource PoupExitButtonStyle}"
                        Visibility="{Binding ShowPopupButton, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <Button
                        Name="ContinueTourButton"
                        Grid.Column="3"
                        Margin="0,0,10,0"
                        Content="{x:Static p:Resources.PackagesGuideContinueButton}"
                        FontSize="14"
                        Style="{StaticResource PoupButtonStyle}"
                        Visibility="{Binding ShowPopupButton, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </Grid>
            </Grid>
        </Canvas>
    </Border>

</Popup>
