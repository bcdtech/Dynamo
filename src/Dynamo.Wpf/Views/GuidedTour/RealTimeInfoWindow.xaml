<Popup
    x:Class="Dynamo.Wpf.Views.GuidedTour.RealTimeInfoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:Dynamo.UI"
    Width="{Binding Width}"
    Height="{Binding Height}"
    MinWidth="340"
    d:DesignHeight="67"
    d:DesignWidth="340"
    AllowsTransparency="True"
    Opacity="0.5"
    PopupAnimation="Fade"
    StaysOpen="False"
    mc:Ignorable="d">
    <Popup.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dynamo.Wpf;component/Themes/Modern/Generic.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Popup.Resources>
    <Border
        Background="{StaticResource RealTimeInfoWindowBackgroundColor}"
        BorderBrush="{StaticResource RealTimeInfoWindowBackgroundColor}"
        BorderThickness="1"
        CornerRadius="2">
        <Grid Name="PopupGrid" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--  This blue line is a decoration in the RealTimeInfoWindow shown at the left side of the screen, see the Figma design for more detail  -->
            <Line
                Name="BorderLine"
                Grid.Column="0"
                Stroke="{StaticResource RealTimeInfoWindowIconColor}"
                StrokeEndLineCap="Round"
                StrokeStartLineCap="Round"
                StrokeThickness="3"
                X1="1"
                X2="1"
                Y1="1" />
            <!--  This Canvas contains two ellipses and one line that draw the information symbol in the RealTimeInfo Window  -->
            <Canvas
                Grid.Column="1"
                Width="20"
                Height="67"
                Margin="30,0,30,0">
                <Ellipse
                    Canvas.Left="0"
                    Canvas.Top="15"
                    Width="20"
                    Height="20"
                    Fill="Transparent"
                    Stroke="{StaticResource RealTimeInfoWindowIconColor}" />
                <Ellipse
                    Canvas.Left="9"
                    Canvas.Top="19"
                    Width="2"
                    Height="2"
                    Fill="{StaticResource RealTimeInfoWindowIconColor}" />
                <Line
                    Canvas.Left="0"
                    Canvas.Top="13"
                    Stroke="{StaticResource RealTimeInfoWindowIconColor}"
                    StrokeThickness="2"
                    X1="10"
                    X2="10"
                    Y1="10"
                    Y2="18" />
            </Canvas>
            <!--  This Text block will contain the text that is shown to the user in the RealTimeInfoWindow  -->
            <TextBlock
                Grid.Column="2"
                MaxWidth="200"
                Margin="0,5,0,5"
                VerticalAlignment="Center"
                FontFamily="Artifakt Element"
                FontSize="12"
                Foreground="White"
                SizeChanged="TextBlock_SizeChanged"
                Text="{Binding TextContent}"
                TextWrapping="WrapWithOverflow" />
            <Button
                Name="CloseButton"
                Grid.Column="3"
                Width="25"
                Height="25"
                Margin="0,10,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="CloseButton_Click"
                Style="{StaticResource RealTimeInfoCloseButtonStyle}" />
        </Grid>
    </Border>
</Popup>
