<UserControl
    x:Class="Dynamo.UI.Controls.PreviewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:clr="clr-namespace:System;assembly=mscorlib"
    xmlns:controls="clr-namespace:Dynamo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="clr-namespace:FontAwesome5;assembly=FontAwesome5.Net"
    xmlns:fwk="clr-namespace:System.Windows;assembly=PresentationFramework"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:Dynamo.Wpf.Properties"
    xmlns:sys="clr-namespace:System.Windows;assembly=PresentationCore"
    xmlns:ui="clr-namespace:Dynamo.UI"
    xmlns:uicontrols="clr-namespace:Dynamo.UI.Controls"
    x:Name="thisPreviewControl"
    Canvas.Top="-20"
    MouseEnter="PreviewControl_MouseEnter"
    MouseLeave="PreviewControl_MouseLeave"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="{x:Static ui:SharedDictionaryManager.DynamoConvertersDictionaryUri}" />
                <ResourceDictionary Source="{x:Static ui:SharedDictionaryManager.DynamoModernDictionaryUri}" />
                <ResourceDictionary Source="{x:Static ui:SharedDictionaryManager.DynamoColorsAndBrushesDictionaryUri}" />
            </ResourceDictionary.MergedDictionaries>

            <clr:Double x:Key="MinPreviewControlWidth">33.0</clr:Double>
            <clr:Double x:Key="MinPreviewControlHeight">28.0</clr:Double>

            <!--  MaxContentGrid = (MaxPreviewControl - (2 * Margin))  -->
            <fwk:Thickness x:Key="PreviewContentMargin">12,5,5,5</fwk:Thickness>
            <clr:Double x:Key="MaxContentGridHeight">288</clr:Double>

        </ResourceDictionary>

    </UserControl.Resources>
    <Grid
        Name="outerContainer"
        Margin="0,6,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <!--
                Invisible part, where user can move mouse.
                It's used, because when mouse is at the edge of the node, preview starts "jumping".
            -->
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--
            Invisible part. Background is set to #01000000. It's almost invisible color.
            But with this color we can handle mouse moves.
        -->

        <Grid
            Name="HiddenDummy"
            Grid.Row="0"
            Grid.Column="0"
            Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:NodeView}}, Path=ActualWidth}"
            HorizontalAlignment="Left"
            Background="#01000000" />

        <Grid
            Name="centralizedGrid"
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Top"
            Background="Transparent"
            Visibility="Hidden">
            <Grid.ContextMenu>
                <ContextMenu Style="{StaticResource ContextMenuStyle}">
                    <MenuItem Click="OnCopyToClipboardClick" Header="{x:Static p:Resources.ContextMenuCopy}" />
                </ContextMenu>
            </Grid.ContextMenu>
            <Border
                Background="{StaticResource DarkerGreyBrush}"
                BorderBrush="{StaticResource BubblePreviewBorderColor}"
                BorderThickness="0"
                CornerRadius="2" />
            <!--  bubbleTools is a pin icon which expands large preview bubble on mouse hover  -->
            <Border
                Name="bubbleTools"
                Padding="3"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Panel.ZIndex="1"
                Visibility="Collapsed">
                <Border
                    x:Name="pinIconBorder"
                    CornerRadius="4"
                    MouseLeftButtonDown="OnMapPinMouseClick">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="4,0,0,4"
                            VerticalAlignment="Bottom"
                            Foreground="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type uicontrols:PreviewControl}}, Path=StaysOpen, Converter={StaticResource PinIconForegroundConverter}}"
                            Text="..." />
                        <fa:ImageAwesome
                            Name="PinnIcon"
                            Width="9"
                            Height="12"
                            Margin="4"
                            Foreground="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type uicontrols:PreviewControl}}, Path=StaysOpen, Converter={StaticResource PinIconForegroundConverter}}"
                            Icon="Solid_Thumbtack" />
                    </StackPanel>
                    <Border.Resources>
                        <Storyboard x:Key="PinIconAnimation">
                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)">
                                <DiscreteColorKeyFrame KeyTime="0:0:0" Value="{StaticResource PinnedIconBackgroundColorAnimation}" />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </Border.Resources>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type uicontrols:PreviewControl}}, Path=StaysOpen}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource PinnedIconBackgroundColor}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=StaysOpen, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type uicontrols:PreviewControl}}}" Value="False">
                                    <Setter Property="Background" Value="{StaticResource UnpinnedIconBackgroundColor}" />
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource PinnedIconHoverBackgroundColor}" />
                                    <Setter Property="BorderBrush" Value="{StaticResource PinnedIconHoverBorderBrushColor}" />
                                    <Setter Property="BorderThickness" Value="2" />
                                </Trigger>
                                <EventTrigger RoutedEvent="Border.PreviewMouseDown">
                                    <EventTrigger.Actions>
                                        <BeginStoryboard x:Name="BeginStory" Storyboard="{StaticResource PinIconAnimation}" />
                                    </EventTrigger.Actions>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
            </Border>
            <Grid
                Name="smallContentGrid"
                MinWidth="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:NodeView}}, Path=ActualWidth}"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <uicontrols:PreviewCompactView />
            </Grid>

            <Grid
                Name="largeContentGrid"
                MinWidth="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:NodeView}}, Path=ActualWidth}"
                MaxHeight="{StaticResource MaxContentGridHeight}"
                HorizontalAlignment="Stretch"
                Visibility="Collapsed" />
        </Grid>
    </Grid>
</UserControl>
