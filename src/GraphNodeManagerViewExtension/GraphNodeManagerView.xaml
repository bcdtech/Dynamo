<UserControl
    x:Class="Dynamo.GraphNodeManager.GraphNodeManagerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Dynamo.GraphNodeManager.Controls"
    xmlns:controls1="clr-namespace:Dynamo.UI.Controls;assembly=Dynamo.Wpf"
    xmlns:converters="clr-namespace:Dynamo.GraphNodeManager.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dynconverters="clr-namespace:Dynamo.Controls;assembly=Dynamo.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:Dynamo.GraphNodeManager.Properties"
    xmlns:ui="clr-namespace:Dynamo.UI;assembly=Dynamo.Wpf"
    x:Name="UserControl"
    d:DesignHeight="450"
    d:DesignWidth="800"
    SnapsToDevicePixels="True"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dynamo.Wpf;component/Themes/Modern/Generic.xaml" />
                <ResourceDictionary Source="Controls/ControlColorsAndBrushes.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <dynconverters:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <dynconverters:InverseBoolToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
            <dynconverters:BoolToZeroLengthConverter x:Key="BoolToZeroLengthConverter" />
            <converters:StateToVisibilityCollapsedConverter x:Key="StateToVisibilityCollapsedConverter" />
            <converters:StateToColorBrushConverter x:Key="StateToColorBrushConverter" />
            <converters:StateToImageSourceConverter x:Key="StateToImageSourceConverter" />
            <converters:StateToTextConverter x:Key="StateToTextConverter" />
            <converters:BooleanToToolTipTextConverter x:Key="BooleanToToolTipTextConverter" />
            <converters:BooleanToFontStyleConverter x:Key="BooleanToFontStyleConverter" />
            <converters:BooleanToFontFamilyConverter x:Key="BooleanToFontFamilyConverter" />

            <Style BasedOn="{StaticResource GenericToolTipLight}" TargetType="{x:Type ToolTip}" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <!--  Search Bar  -->
        <controls:SearchBoxControl Grid.Row="0" Margin="10,5,20,0" />

        <!--  Contains all filter icons  -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="{Binding IsAnyFilterOn, Converter={StaticResource BoolToZeroLengthConverter}}" />
            </Grid.ColumnDefinitions>
            <Grid x:Name="FilterGrid">
                <ItemsControl
                    x:Name="FilterItemControl"
                    Margin="5"
                    ItemsSource="{Binding FilterItems, UpdateSourceTrigger=PropertyChanged}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:FilterItemControl />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>

            <!--  Clear Filter Button  -->
            <Button
                x:Name="ClearFiltersButton"
                Grid.Column="1"
                Width="60"
                Margin="0,3,10,15"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding ClearFiltersCommand}"
                Content="Clear all"
                Style="{StaticResource ButtonStyle1}"
                Visibility="{Binding IsAnyFilterOn, Converter={StaticResource BooleanToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>

        <!--  Node Data Grid  -->
        <DataGrid
            x:Name="NodesInfoDataGrid"
            Grid.Row="2"
            Margin="0"
            VerticalAlignment="Top"
            AlternationCount="2"
            AutoGenerateColumns="False"
            Background="{StaticResource ExtensionBackgroundColor}"
            BorderThickness="0"
            CanUserAddRows="False"
            CanUserResizeColumns="True"
            CanUserSortColumns="True"
            FontFamily="{StaticResource ArtifaktElementRegular}"
            Foreground="{StaticResource DarkThemeBodyMediumBrush}"
            HeadersVisibility="Column"
            IsReadOnly="True"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Path=NodesCollection.View}"
            MinColumnWidth="60"
            RowDetailsVisibilityMode="Collapsed"
            ScrollViewer.CanContentScroll="True"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            SelectionMode="Single"
            SelectionUnit="FullRow"
            Style="{StaticResource DataGridStyle1}"
            VirtualizingStackPanel.IsVirtualizing="True"
            VirtualizingStackPanel.VirtualizationMode="Recycling">
            <DataGrid.Resources>
                <Style BasedOn="{StaticResource {x:Type DataGridRow}}" TargetType="DataGridRow">
                    <EventSetter Event="PreviewMouseLeftButtonUp" Handler="Row_PreviewClickHandler" />
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>

                <!--  Name  -->
                <DataGridTemplateColumn
                    Width="6*"
                    Header="{x:Static p:Resources.HeaderNameName}"
                    HeaderStyle="{StaticResource FirstColumnHeaderStyle1}"
                    IsReadOnly="True"
                    SortMemberPath="Name">

                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DockPanel HorizontalAlignment="Stretch">
                                <!--  Node Name  -->
                                <TextBlock
                                    Margin="3,0,0,0"
                                    DockPanel.Dock="Left"
                                    FontFamily="{StaticResource ArtifaktElementBold}"
                                    FontSize="11"
                                    Foreground="{StaticResource DarkThemeBodyMediumBrush}"
                                    Text="{Binding Name}" />
                                <!--  Blue Dot signifying Renamed Nodes  -->
                                <Grid DockPanel.Dock="Right">
                                    <Ellipse
                                        Name="nodeRenamedBlueDot"
                                        Width="6"
                                        Height="6"
                                        Margin="0,0,6,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Fill="{StaticResource Blue300Brush}"
                                        Visibility="{Binding IsRenamed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </Grid>
                            </DockPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!--  Type  -->
                <DataGridTemplateColumn
                    Width="3*"
                    Header="{x:Static p:Resources.HeaderNameType}"
                    IsReadOnly="True"
                    SortMemberPath="TypeSortKey">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="16"
                                    Source="/GraphNodeManagerViewExtension;component/Images/Function.png"
                                    Style="{StaticResource ImageStyle}"
                                    ToolTip="{x:Static p:Resources.Title_Function}"
                                    Visibility="{Binding StateIsFunction, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <Image
                                    Width="16"
                                    Source="/GraphNodeManagerViewExtension;component/Images/IsInput.png"
                                    Style="{StaticResource ImageStyle}"
                                    ToolTip="{x:Static p:Resources.Title_IsInput}"
                                    Visibility="{Binding StateIsInput, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <Image
                                    Width="16"
                                    Source="/GraphNodeManagerViewExtension;component/Images/IsOutput.png"
                                    Style="{StaticResource ImageStyle}"
                                    ToolTip="{x:Static p:Resources.Title_IsOutput}"
                                    Visibility="{Binding StateIsOutput, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!--  State  -->
                <DataGridTemplateColumn
                    Width="3*"
                    Header="{x:Static p:Resources.HeaderNameState}"
                    IsReadOnly="True"
                    SortMemberPath="StateSortKey">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="16"
                                    Source="/GraphNodeManagerViewExtension;component/Images/Frozen.png"
                                    Style="{StaticResource ImageStyle}"
                                    ToolTip="{x:Static p:Resources.Title_Frozen}"
                                    Visibility="{Binding StatusIsFrozen, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <Image
                                    Width="16"
                                    Source="/GraphNodeManagerViewExtension;component/Images/Hidden.png"
                                    Style="{StaticResource ImageStyle}"
                                    ToolTip="{x:Static p:Resources.Title_PreviewOff}"
                                    Visibility="{Binding StatusIsHidden, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <controls:InfoBubbleControl
                                    Margin="3,0"
                                    ToolTip="{x:Static p:Resources.Title_Information}"
                                    Visibility="{Binding State, Converter={StaticResource StateToVisibilityCollapsedConverter}, ConverterParameter=Info}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!--  Issues  -->
                <DataGridTemplateColumn
                    Width="3*"
                    Header="{x:Static p:Resources.HeaderNameIssues}"
                    IsReadOnly="True"
                    SortMemberPath="IssueSortKey">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <controls:InfoBubbleControl
                                    Margin="3,0"
                                    ToolTip="{Binding State, Converter={StaticResource StateToTextConverter}}"
                                    Visibility="{Binding State, Converter={StaticResource StateToVisibilityCollapsedConverter}, ConverterParameter=WarningOrError}" />
                                <Border
                                    Width="14"
                                    Height="14"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Background="{StaticResource PrimaryCharcoal100Brush}"
                                    CornerRadius="7"
                                    ToolTip="{x:Static p:Resources.ToolTip_DismissedWarnings}"
                                    Visibility="{Binding DismissedAlertsCount, Converter={StaticResource IntToVisibilityConverter}}">
                                    <TextBlock
                                        Margin="-1,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="9"
                                        Foreground="{StaticResource DarkGreyBrush}"
                                        Text="{Binding DismissedAlertsCount}" />
                                </Border>
                                <Image
                                    Width="16"
                                    Source="/GraphNodeManagerViewExtension;component/Images/MissingNode.png"
                                    Style="{StaticResource ImageStyle}"
                                    ToolTip="{x:Static p:Resources.Title_MissingContent}"
                                    Visibility="{Binding IsDummyNode, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!--  Outputs  -->
                <DataGridTemplateColumn
                    Width="3*"
                    Header="{x:Static p:Resources.HeaderNameOutputs}"
                    IsReadOnly="True"
                    SortMemberPath="OutputSortKey">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Grid>
                                    <Image
                                        Width="16"
                                        Source="/GraphNodeManagerViewExtension;component/Images/Union.png"
                                        Style="{StaticResource ImageStyle}"
                                        ToolTip="{x:Static p:Resources.Title_IsOutputSingleItem}"
                                        Visibility="{Binding IsOutputSingleItem, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <TextBlock
                                        Margin="-1,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="9"
                                        Foreground="{StaticResource InfoBubbleEdgeNormalBrush}"
                                        Text="{Binding TopLevelItemsNumber}"
                                        ToolTip="{x:Static p:Resources.Title_TopLevelItemsNumber}"
                                        Visibility="{Binding IsOutputSingleItem, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                                </Grid>
                                <Image
                                    Source="/GraphNodeManagerViewExtension;component/Images/EmptyList.png"
                                    Style="{StaticResource ImageStyle}"
                                    ToolTip="{x:Static p:Resources.Title_EmptyList}"
                                    Visibility="{Binding IsEmptyList, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <Image
                                    Width="16"
                                    Source="/GraphNodeManagerViewExtension;component/Images/Null.png"
                                    Style="{StaticResource ImageStyle}"
                                    ToolTip="{x:Static p:Resources.Title_Null}"
                                    Visibility="{Binding IsNull, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>

            <!--  Expanded Node Info  -->
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border
                        Width="{Binding ActualWidth, ElementName=NodesInfoDataGrid}"
                        Margin="0,0,-2,0"
                        Background="#353535"
                        BorderBrush="{Binding State, Converter={StaticResource StateToColorBrushConverter}}"
                        BorderThickness="3,0,0,0">
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                Margin="13,10"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource ArtifaktElementRegular}"
                                FontWeight="Light"
                                Foreground="{StaticResource DarkThemeBodyMediumBrush}"
                                Text="{Binding Package}" />
                            <ItemsControl
                                x:Name="DetailedRowItemControl"
                                AlternationCount="50"
                                ItemsSource="{Binding NodeInfos, UpdateSourceTrigger=PropertyChanged}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{StaticResource GrayOpacityBrush}" BorderThickness="0,1,0,0">
                                            <Grid Margin="10,15,10,20" VerticalAlignment="Center">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Image
                                                    Grid.Column="0"
                                                    Margin="5,0"
                                                    VerticalAlignment="Top"
                                                    Source="{Binding State, Converter={StaticResource StateToImageSourceConverter}}"
                                                    Style="{StaticResource ImageStyle}"
                                                    Visibility="{Binding Dismissed, Converter={StaticResource InverseBooleanToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}" />
                                                <TextBlock
                                                    Grid.Column="1"
                                                    Margin="10,-2,10,0"
                                                    VerticalAlignment="Top"
                                                    FontFamily="{Binding Dismissed, Converter={StaticResource BooleanToFontFamilyConverter}, UpdateSourceTrigger=PropertyChanged}"
                                                    FontSize="11"
                                                    FontStyle="{Binding Dismissed, Converter={StaticResource BooleanToFontStyleConverter}, UpdateSourceTrigger=PropertyChanged}"
                                                    FontWeight="Light"
                                                    Foreground="{StaticResource DarkThemeBodyMediumBrush}"
                                                    TextWrapping="Wrap">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0} {1}">
                                                            <Binding Path="Index" />
                                                            <Binding Path="Message" />
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                                <Button
                                                    Name="ClipboardButton"
                                                    Grid.Column="2"
                                                    Width="24"
                                                    Margin="5,0"
                                                    VerticalAlignment="Top"
                                                    Cursor="Hand"
                                                    PreviewMouseLeftButtonDown="OnClipboardButtonClick"
                                                    Style="{StaticResource ButtonStyle1}"
                                                    Tag="{Binding ElementName=DetailedRowItemControl, Path=DataContext}">
                                                    <Image Source="/GraphNodeManagerViewExtension;component/Images/Copy.png" Style="{StaticResource ImageStyle}" />
                                                    <Button.ToolTip>
                                                        <controls1:DynamoToolTip AttachmentSide="Bottom" Style="{DynamicResource ResourceKey=SLightToolTip}">
                                                            <Grid>
                                                                <TextBlock
                                                                    MaxWidth="320"
                                                                    Padding="5"
                                                                    FontFamily="{StaticResource ArtifaktElementRegular}"
                                                                    FontSize="12"
                                                                    Foreground="Black"
                                                                    Text="{x:Static p:Resources.ToolTip_CopyToClipboard}"
                                                                    TextWrapping="Wrap" />
                                                            </Grid>
                                                        </controls1:DynamoToolTip>
                                                    </Button.ToolTip>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>

        </DataGrid>

        <!--  Export Button  -->
        <DockPanel Grid.Row="3">
            <Grid DockPanel.Dock="Top">
                <Button
                    x:Name="ExportButton"
                    Width="34"
                    Margin="0,9,7,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="ExportButton_OnClick"
                    Content="Export"
                    Cursor="Hand"
                    FontWeight="Regular"
                    Style="{StaticResource ButtonStyle1}">
                    <Button.ContextMenu>
                        <ContextMenu
                            Name="MainContextMenu"
                            Width="170"
                            Margin="0,-10"
                            Background="{StaticResource MidGrayBrush}"
                            Style="{StaticResource ContextMenuStyle}">
                            <MenuItem
                                Name="CSVItem"
                                Padding="10"
                                Command="{Binding ExportCommand}"
                                CommandParameter="CSV"
                                FontSize="12"
                                Header="{x:Static p:Resources.MenuItemExportAsCSV}" />
                            <MenuItem
                                Name="JSONItem"
                                Padding="10"
                                Command="{Binding ExportCommand}"
                                CommandParameter="JSON"
                                FontSize="12"
                                Header="{x:Static p:Resources.MenuItemExportAsJSON}" />

                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
